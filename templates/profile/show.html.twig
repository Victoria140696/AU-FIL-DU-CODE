{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-center">
		<div class="m-5 border border-primary rounded-3">
			<div class="bg-primary p-5 text-white">

				<h1 class="">Mon profil</h1>
				<hr></hr>
		</div>


		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>IsVerified</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex justify-content-center m-5">
			<a class="btn btn-primary" href="{{ path('app_profile_edit') }}">Modifier mon profil</a>
		</div>
        <div class="d-flex justify-content-center m-5">
			<a class="btn btn-info" href="">Voir mes favoris</a>
		</div>
	</div>
</div>{% endblock %}
