{% extends 'base.html.twig' %}

{% block title %}Website index{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center m-5">Index des sites internet</h1>

    <div class="mx-5 table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Lien</th>
                <th>Date de création</th>
                <th>Date d'ajout</th>
                <th>ContentManagementSystem</th>
                <th>Activité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for website in websites %}
            <tr>
                <td>{{ website.id }}</td>
                <td>{{ website.title }}</td>
                <td>{{ website.description }}</td>
                <td>{{ website.price }}</td>
                <td>{{ website.image }}</td>
                <td>{{ website.link }}</td>
                <td>{{ website.createdAt ? website.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ website.date ? website.date|date('Y-m-d') : '' }}</td>
                <td>{{ website.contentManagementSystem }}</td>
                <td>{{ website.activity }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_admin_website_show', {'id': website.id}) }}">Voir</a>
                    <a class="btn btn-danger" href="{{ path('app_admin_website_edit', {'id': website.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info m-2" href="{{ path('app_admin_website_new') }}">Ajouter</a>
    </div>
{% endblock %}
