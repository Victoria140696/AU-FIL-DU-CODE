{% extends 'base.html.twig' %}

{% block title %}Website{% endblock %}

{% block body %}
    <h1>Website</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ website.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ website.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ website.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ website.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ website.image }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ website.link }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ website.createdAt ? website.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ website.date ? website.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ContentManagementSystem</th>
                <td>{{ website.contentManagementSystem }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ website.activity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_website_index') }}">back to list</a>

    <a href="{{ path('app_admin_website_edit', {'id': website.id}) }}">edit</a>

    {{ include('admin_website/_delete_form.html.twig') }}
{% endblock %}
