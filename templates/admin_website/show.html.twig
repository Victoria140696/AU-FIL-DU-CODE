{% extends 'base.html.twig' %}

{% block title %}Website{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center m-5">Site internet</h1>

<div class="m-5 table-responsive">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ website.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ website.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ website.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ website.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ website.image }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ website.link }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ website.createdAt ? website.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ website.date ? website.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ContentManagementSystem</th>
                <td>{{ website.contentManagementSystem }}</td>
            </tr>
            <tr>
                <th>Activity</th>
                <td>{{ website.activity }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_admin_website_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('app_admin_website_edit', {'id': website.id}) }}">Editer</a>

    {{ include('admin_website/_delete_form.html.twig') }}
    </div>
{% endblock %}
